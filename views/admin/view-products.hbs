<main style="padding-top: 56px;">
<section>
    <div class="container">
        <div class="row mt-3 mb-5 justify-content-end">
            <div class="col-auto">
                <a href="/admin/add-product" class="btn btn-primary">Add Product</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table pt-4" id="productsTable">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Category</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th>Image</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.price}}</td>
                        <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"></td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you want to delete {{this.name}} ?')" class="btn btn-danger">Delete</a>
                        </td>                    
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>
</main>


<script>
    let table = new DataTable('#productsTable');
</script>