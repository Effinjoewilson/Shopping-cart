<section >
    <div class="container">
        <div class="row mt-3" style="float: right;" >
            <a href="/admin/add-product" class="btn btn-primary">Add Product</a>
        </div>  
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{ @index }}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"></td>
                    <td><a href="/admin/edit-product/{{this._id}}"><i class="bi bi-scissors"></i></a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you want to delete {{this.name}} ?')"><i class="bi bi-trash-fill"></i></a></td>                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>