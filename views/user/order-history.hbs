<div class="container">
    {{#each orderHistory}}
    <div class="card mt-5">
        <div class="row">
            <div class="col-sm-6 mt-4 mb-4 ms-3" style="width: 55%;">
                <div class="card">
                    {{#each products}}
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.name}}</h5>
                        <p class="card-text">{{this.product.category}}</p>  
                        <p href="" class="">Price : {{this.product.price}}</p>
                    </div>
                    <div class="card-body">
                        <img src="/product-images/{{this.product._id}}.jpg" style="width: 75px; height: 75px;">
                    </div>
                    {{/each}}
                     <div class="card-body">
                        <hr>
                        <h3>Total : {{this.totalAmount}}</h3>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 mt-4 mb-4 ms-3" style="width: 40%;">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Address</h5>
                        <p class="card-text">{{this.contacts.address}}</p>
                        <p class="card-text">Pin Code : {{this.contacts.pincode}}</p>
                        <p class="card-text">Ph No. {{this.contacts.mobile}}</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                         <p>Date : {{this.date}}</p>
                         <p>Mode : {{this.paymentMethod}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>