<div class="container">
    <form class="row g-3 mt-5">
        <div class="col-md-6">
            <div class="col-12">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
            </div>
            <div>
                <label for="inputState" class="form-label">State</label>
                <input type="text" class="form-control" id="inputState">
            </div>
            <div>
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div>
                <label for="inputZip" class="form-label">Pin Code</label>
                <input type="text" class="form-control" id="inputPincode">
            </div>
        </div>
        <div class="col-md-6 mt-5">
            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">Total Amount : Rs. 4999</h5>
                    <hr>
                    <p class="card-text">Payment method</p>
                    <div class="form-control">
                        <input type="radio" name="cash_on_delivery">
                        <label for="cash_on_delivery">Cash On Delivery</label><br><br>
                        <input type="radio" name="online_payment">
                        <label for="online_payment">Online Payment</label>
                    </div>
                </div>
                <div class="col-md-3 mx-auto">
                    <button type="submit" class="btn btn-success">Proceed</button>
                </div>
            </div>
        </div>
    </form>
</div>