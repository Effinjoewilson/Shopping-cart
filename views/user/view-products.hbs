<main style="padding-top: 56px;">
<section>
  <div class="container">
    <div class="row">
      {{#each products}}
      <div class="col-lg-3 col-md-4 col-sm-6 col-6 mt-4">
        <div class="card">
          <img src="/product-images/{{this._id}}.jpg" style="height: 15rem;" class="card-img-top" alt="">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Rs {{this.price}}</p>
            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
</main>

<style>
  .card:hover {
    box-shadow: 0 25px 25px 0 rgba(0, 0, 0, 0.2);
    transition: box-shadow 0.3s ease-in-out;
  }
</style>

